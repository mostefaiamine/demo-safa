@page "/order/create"
@model DemoSafa.Pages.CreateOrderModel

@if (TempData.ContainsKey("message"))
{
    <div class="col-12" id="div-message">
        <div class="alert alert-success" role="alert" id="alert-message">
            @TempData["message"]
        </div>
    </div>
}
else
{
    <div class="col-12">

        <form method="post">

            <div class="form-group row">
                <label asp-for="SelectedProductCode" class="col-sm-2 col-form-label">Product</label>
                <div class="col-sm-10">
                    <select id="cbProduct" asp-for="SelectedProductCode" class="custom-select mr-sm-2"
                            asp-items='Model.ProductItems'></select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input id="txtQuantiy" asp-for="Quantity" class="form-control" placeholder="Quanytity" value="1">
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                </div>
            </div>

        </form>
    </div>
}